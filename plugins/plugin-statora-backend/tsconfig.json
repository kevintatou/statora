{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "dist",                     // keep JS in dist/
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist-types",        // <--- ADD THIS! types into dist-types/
    "sourceMap": true,
    "composite": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "extends": "./tsconfig.base.json",

  "exclude": ["dist", "dist-types", "node_modules"]
}
